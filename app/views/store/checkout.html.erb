<% if session[:signed_in] %>
	<div style="padding: 200px">
      <h1>Order Number: <%= @latest_order.id  %></h1>
      <table>
        <tr>
          <th>Item</th>
          <th>Quantity</th>
        </tr>

          <% @items_ordered.each do |item, quantity| %>
              <tr>
        <td><%= item %><td>
        <td><%= quantity %></td>
        </tr>
        <% end %>
       </table>
       <%= render ("charges/new") %>
      </div>

<% else %>
	sign_in
<% end %>






