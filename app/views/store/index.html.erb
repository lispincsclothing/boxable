<% user_signed_in = false %>
<% user_signed_in = true if signed_in? %>

<%= react_component ("store"), signedIn: user_signed_in %>
<div class="modal-overlay">
	<div class="sign-in-up-modal">
		<a href="#" class="exit-modal">X</a>

		<div class="sign-up-container">
			<h2>Sign Up To Checkout</h2>
			<form class="sign-up-form">

				<div class="form-group">
				    <label for="exampleInputEmail1">Email address</label>
				    <input type="email" class="form-control" name="email" id="exampleInputEmail1" placeholder="Enter email">
				  </div>
				  <div class="form-group">
				    <label for="exampleInputPassword1">Password</label>
				    <input type="password" class="form-control" name="password" placeholder="Must be longer than 8 characters">
				  </div>
				  <div class="form-group">
				    <label for="exampleInputPassword1">Password</label>
				    <input type="password" class="form-control" name="password" placeholder="Must be longer than 8 characters">
				  </div>
				<button type="submit" class="btn btn-default">Sign In</button>
			</form>
			<h3>Or</h3>
			<a href="#" id="sign-in">Sign In</a>
		</div>

		<div class="sign-in-container">
			<h2>Sign In To Checkout</h2>
			<form class="sign-in-form">

				<div class="form-group">
				    <label for="exampleInputEmail1">Email address</label>
				    <input type="email" class="form-control"  placeholder="Enter email">
				  </div>
				  <div class="form-group">
				    <label for="exampleInputPassword1">Password</label>
				    <input type="password" class="form-control" placeholder="Must be longer than 8 characters">
				  </div>
				<button type="submit" class="btn btn-default">Sign In</button>
			</form>
			<h3>Or</h3>
			<a href="#" id="sign-up">Sign Up</a>
		</div>


	</div>
</div>